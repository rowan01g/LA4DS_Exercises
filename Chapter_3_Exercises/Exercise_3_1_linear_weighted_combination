
#%%
import numpy as np

# the scalars
l1 = 1
l2 = 2
l3 = -3

# the vectors
v1 = np.array([4,5,1])
v2 = np.array([-4,0,-4])
v3 = np.array([1,3,2])

# organized into lists
scalars = [ l1,l2,l3 ]
vectors = [ v1,v2,v3 ]
     
linCombo = np.zeros(len(v1))
print(linCombo)

for s,v in zip(scalars, vectors):
    linCombo += s*v

print(linCombo)

# %%
